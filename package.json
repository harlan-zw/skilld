    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@mdream/crawl": "^0.15.3",
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "mdream": "^0.15.3",
    "retriv": "link:../retriv"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@types/node": "^22.10.0",
    "obuild": "^0.4.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
